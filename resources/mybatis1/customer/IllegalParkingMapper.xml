		"ZPSTR2",	
		"ZPSTR3",	
		"SHZT"
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
			#{XH},	
			#{CJJG},	
			#{CLFL},	
			#{HPZL},	
			#{HPHM},	
			#{JDCSYR},	
			#{SYXZ},	
